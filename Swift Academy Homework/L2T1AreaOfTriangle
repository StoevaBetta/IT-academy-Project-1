import java.util.Scanner;

/**
 * Created by gerganastoeva on 10/11/17.
 */
public class L2T1AreaOfTriangle {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        double a = Double.parseDouble(sc.nextLine());
        double b = Double.parseDouble(sc.nextLine());
        double c = Double.parseDouble(sc.nextLine());
        double areaOfTriangle = 0.0;


        if (a*a + b*b == c*c) {
            areaOfTriangle = (a*b)/2.0;
            System.out.println("Area of rectangle = " + areaOfTriangle);
        }else{
            System.out.println("Error!Invalid lenght of sides /Pythagorean theorem/");
        }

    }
}
